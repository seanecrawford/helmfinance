generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts      Account[]
  transactions  Transaction[]
  budgets       Budget[]
  goals         Goal[]
}

model Account {
  id        String   @id @default(cuid())
  userId    String
  name      String
  type      String
  balance   Decimal  @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(cuid())
  userId    String
  accountId String
  date      DateTime
  category  String
  memo      String?
  amount    Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  account Account @relation(fields: [accountId], references: [id])

  @@index([userId, date])
  @@index([accountId])
}

model Budget {
  id        String   @id @default(cuid())
  userId    String
  category  String
  limit     Decimal
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

model Goal {
  id        String   @id @default(cuid())
  userId    String
  name      String
  target    Decimal
  saved     Decimal  @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}
